{
  "manifest_version": 3,
  "name": "AI Chat Navigator",
  "version": "3.0.0",
  "description": "为Gemini/ChatGPT/Claude等AI对话添加带有搜索和收藏功能的高级导航面板,支持键盘快捷键和主题切换",
  "permissions": [
    "tabs",
    "storage",
    "nativeMessaging",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "manifest.json", "styles.css" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chatgpt.com/*",
        "https://chat.openai.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-gnp-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S"
      },
      "description": "Toggle AI Chat Navigator sidebar"
    }
  },
  "gnp_favorites_json_path": "/Users/shengshiliao/.ai-chat-navigator/AI-Chat-Navigator/favorites.json",
  "gnp_native_host_name": "ai_chat_navigator_native",
  "gnp_backup_interval_min": 60
}
